<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001.1-create-users-table" author="muhsener-be">
        <comment>Creates 'users' table to hold users in the system</comment>
        <createTable tableName="users">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="username" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="password" type="text">
                <constraints nullable="false"/>
            </column>

            <column name="is_active" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>

            <!--            Auditing Columns-->
            <column name="created_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="UUID">
                <constraints foreignKeyName="fk_created_by_to_users_id" references="users(id)" nullable="true"/>
            </column>
            <column name="updated_by" type="UUID">
                <constraints foreignKeyName="fk_updated_by_to_users_id" references="users(id)" nullable="true"/>
            </column>

            <column name="deleted_at" type="timestamptz"/>
        </createTable>
    </changeSet>


    <changeSet id="001.2-put-partial-unique-index-on-username" author="muhsener-be">
        <comment>Put partial unique index on 'username' column where 'deleted_at' is NULL</comment>
        <sql dbms="postgresql">
            CREATE UNIQUE INDEX IF NOT EXISTS idx_u_users_username
                ON users(username)
                WHERE deleted_at IS NULL;
        </sql>

        <rollback>
            <sql dbms="postgresql">
                DROP INDEX idx_u_users_username;
            </sql>
        </rollback>
    </changeSet>

</databaseChangeLog>